@model CarrinhoCompraViewModel

<div class="Container">
    <div  class="row"> 
            
        <div>
            <img src="~/images/Full-Cart-icon.png" width="48" height="48"/>
            <h4>Seu Carrinho de Compra</h4>
        </div>
        <table class= "table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quaantidade</th>
                    <th>Lanche</th>
                    <th class = "text-right">Preço</th>
                    <th class = "text-right">Sub-Total</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                         <td class = "text-center">@item.Quantidade</td>
                        <td class = "text-center">@item.Lanche.Nome</td>
                        <td class = "text-right">@item.Lanche.Preco.ToString("c")</td>
                        
                        <td class = "text-center">@((item.Quantidade *  item.Lanche.Preco).ToString("c"))</td>
                        <td class = "text-center"><a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                        asp-route-lancheId="@item.Lanche.LancheId"><img src=~/images/delete.png> </a>
                         </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <td colspan="3" class = "text-right">Total:</td>
                <td class = "text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
            </tfoot>
        </table>

        <div class = "text-right">
            <div class = "btn-group">
                <a class = "btn btn-success" asp-controller="Pedido" asp-action="checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
    </div>
</div>

